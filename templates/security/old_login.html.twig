{% extends 'base.html.twig' %}

{% block title %}Login | {{ parent() }}{% endblock %}

{% block stylesheets %}
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Bootstrap core CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet">
    <!-- Material Design Bootstrap -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.5.9/css/mdb.min.css" rel="stylesheet">
{% endblock %}

{% block navbar %}{{ parent() }}{% endblock %}




{% block body %}

    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-xs-12 col-md-6 col-md-offset-6">
                <div class="card">
                    <div class="card-body">
                        <form action="{{ path('login') }}" method="post">

                            <p class="h4 text-center py-4">SIGN IN</p>

                            <div class="md-form">
                                <i class="fa fa-envelope prefix grey-text"></i>
                                <input required id="username" name="email" value="{{ last_username }}" type="email" class="form-control mb-4">
                                <label for="materialFormCardEmailEx" class="font-weight-light">Email</label>
                            </div>

                            <div class="md-form">
                                <i class="fa fa-lock prefix grey-text"></i>
                                <input required id="password" name="password" type="password" class="form-control mb-4">
                                <label for="materialFormCardPasswordEx" class="font-weight-light">Password</label>
                            </div>

                            <div class="text-center py-4 mt-3">
                                <button class="btn btn-primary btn-block my-4 mb-4" type="submit">Sign in</button>

                                {% if error %}
                                    <small>{{ error.messageKey|trans(error.messageData, 'security') }}</small>
                                {% endif %}
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
            <!-- JQuery -->
            <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
            <!-- Bootstrap tooltips -->
            <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.13.0/umd/popper.min.js"></script>
            <!-- Bootstrap core JavaScript -->
            <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.min.js"></script>
            <!-- MDB core JavaScript -->
            <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.5.9/js/mdb.min.js"></script>
{% endblock %}